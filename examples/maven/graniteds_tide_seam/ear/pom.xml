<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.graniteds.examples.tide_seam.poms</groupId>
    <artifactId>jee</artifactId>
    <version>2.2.0.GA</version>
  </parent>

  <groupId>org.graniteds.examples.tide_seam</groupId>
  <artifactId>graniteds_tide_seam</artifactId>
  <version>2.2.0.GA</version>
  <packaging>ear</packaging>

  <build>
    <finalName>graniteds-tide-seam</finalName>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>failsafe-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-ear-plugin</artifactId>
        <configuration>
          <defaultLibBundleDir>lib</defaultLibBundleDir>
          <generateApplicationXml>true</generateApplicationXml>
          <fileNameMapping>full</fileNameMapping>
          <version>5</version>
          <modules>
            <ejbModule>
              <groupId>org.graniteds.examples.tide_seam</groupId>
              <artifactId>core</artifactId>
              <bundleFileName>graniteds-tide-seam.jar</bundleFileName>
            </ejbModule>
            <webModule>
              <groupId>org.graniteds.examples.tide_seam</groupId>
              <artifactId>war</artifactId>
              <bundleFileName>graniteds-tide-seam.war</bundleFileName>
              <contextRoot>/graniteds-tide-seam</contextRoot>
              <unpack>true</unpack>
            </webModule>
            <ejbModule>
              <groupId>org.jboss.seam</groupId>
              <artifactId>jboss-seam</artifactId>
              <bundleFileName>jboss-seam.jar</bundleFileName>
            </ejbModule>
          </modules>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>org.graniteds.examples.tide_seam</groupId>
      <artifactId>core</artifactId>
      <version>2.2.0.GA</version>
      <type>ejb</type>
    </dependency>
    <dependency>
      <groupId>org.graniteds.examples.tide_seam</groupId>
      <artifactId>war</artifactId>
      <version>2.2.0.GA</version>
      <type>war</type>
    </dependency>
    <dependency>
      <groupId>org.jboss.seam</groupId>
      <artifactId>jboss-seam</artifactId>
      <type>ejb</type>
      <exclusions>
        <exclusion>
          <groupId>xstream</groupId>
          <artifactId>xstream</artifactId>
        </exclusion>
        <exclusion>
          <groupId>xpp3</groupId>
          <artifactId>xpp3_min</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
</project>